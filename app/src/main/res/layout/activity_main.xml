<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Quiz"
            android:textSize="50dp"
            android:textAlignment="center"
            android:background="#2196F3"/>
        <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/security"
            android:layout_marginBottom="25dp"/>
        <EditText
            android:id="@+id/name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name here "
            android:inputType="textMultiLine"
            android:layout_marginBottom="40dp"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.Cookies raise some security and privacy concerns becase?"
            android:textSize="30dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">

            <RadioButton
                android:id="@+id/a_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="They could contain a virus which then infects my computer."
                android:textAppearance="?android:textAppearanceMedium" />

            <RadioButton
                android:id="@+id/b_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The collection of data stored in my device"
                android:textAppearance="?android:textAppearanceMedium" />

            <RadioButton
                android:id="@+id/c_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The collection of personal data as well as the risk that someone could impersonate me"
                android:textAppearance="?android:textAppearanceMedium" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.What does social engineering mean in a security context?"
            android:textSize="30dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">

            <RadioButton
                android:id="@+id/a2_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building systems that are easy to use for society."
                android:textAppearance="?android:textAppearanceMedium" />

            <RadioButton
                android:id="@+id/b2_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It is a form of social deception focussed on information gathering, fraud, or system access."
                android:textAppearance="?android:textAppearanceMedium" />

            <RadioButton
                android:id="@+id/c2_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Someone uses social networks for stealing personal data."
                android:textAppearance="?android:textAppearanceMedium" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.Which of the following is a fundamental and well established Privacy-Enhancing Technology?"
            android:textSize="30dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">

            <RadioButton
                android:id="@+id/a3_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The antivirus software"
                android:textAppearance="?android:textAppearanceMedium" />

            <RadioButton
                android:id="@+id/b3_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firewall"
                android:textAppearance="?android:textAppearanceMedium" />

            <RadioButton
                android:id="@+id/c3_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encryption"
                android:textAppearance="?android:textAppearanceMedium" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.Which of the followings are good passwords(select all that apply)?"
            android:textSize="30dp" />
        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="he22o"
            android:textAppearance="?android:textAppearanceMedium" />
        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h3ll4"
            android:textAppearance="?android:textAppearanceMedium" />
        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="he3ll9o"
            android:textAppearance="?android:textAppearanceMedium" />
        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7he_ll/o"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginBottom="40dp"/>
        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_gravity="center"
            android:onClick="submitAnswers"
            android:layout_marginBottom="40dp"/>
    </LinearLayout>
</ScrollView>